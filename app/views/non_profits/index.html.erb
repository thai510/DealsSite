<% content_for :not_right_layout do%>
<% unless current_user %>
<div id="layoutbanner">
  <div class="leftLinks">
     <div class="bannerlogo">
      <%= link_to image_tag("theme/smallbannercroppedlogo.png"),home_path %>
     </div>
 </div>
</div>
<div id='content'>
<% end %>
<br />
<h1>ALL PARTICIPATING ORGANIZATIONS</h1>
  <% if bool_admin_authorize %>
<%= link_to 'New Non profit', new_non_profit_path %>
<% end %>
   <br />
   <br />
  <% @leftContainer = @non_profits.values_at(* @non_profits.each_index.select {|i| i % 3 == 0 }) %>
  <% @middleContainer = @non_profits.values_at(* @non_profits.each_index.select {|i| i % 3 == 1 }) %>
  <% @rightContainer = @non_profits.values_at(* @non_profits.each_index.select {|i| i % 3 == 2 }) %>

<div class='nonProfitIndexContainerLeft'>
<% @leftContainer.each do |np| %>
        <div class='nonProfitIndexShowContainer'>
          <div class='nonProfitDBDescriptionImage'><%= image_tag(np.np_photo.url(:thumb)) %></div>
          <div class='nonProfitShowTitle'><%= np.name %></div>
          <div class='nonProfitShowDescription'><%= np.description %></div>
        <%= link_to 'Show', np %>
       <% if bool_admin_authorize %>
         <%= link_to 'Edit', edit_non_profit_path(np)%>
         <%= link_to 'Destroy', np, :confirm => 'Are you sure?', :method => :delete %>
       <% end %>
        </div>
<% end %>
</div>
<div class='nonProfitIndexContainerMiddle'>
<% @middleContainer.each do |np| %>
        <div class='nonProfitIndexShowContainer'>
          <div class='nonProfitDBDescriptionImage'><%= image_tag(np.np_photo.url(:thumb)) %></div>
          <div class='nonProfitShowTitle'><%= np.name %></div>
          <div class='nonProfitShowDescription'><%= np.description %></div>
        <%= link_to 'Show', np %>
       <% if bool_admin_authorize %>
         <%= link_to 'Edit', edit_non_profit_path(np)%>
         <%= link_to 'Destroy', np, :confirm => 'Are you sure?', :method => :delete %>
       <% end %>
        </div>
<% end %>
</div>
<div class='nonProfitIndexContainerRight'>
<% @rightContainer.each do |np| %>
        <div class='nonProfitIndexShowContainer'>
          <div class='nonProfitDBDescriptionImage'><%= image_tag(np.np_photo.url(:thumb)) %></div>
          <div class='nonProfitShowTitle'><%= np.name %></div>
          <div class='nonProfitShowDescription'><%= np.description %></div>
        <%= link_to 'Show', np %>
       <% if bool_admin_authorize %>
         <%= link_to 'Edit', edit_non_profit_path(np)%>
         <%= link_to 'Destroy', np, :confirm => 'Are you sure?', :method => :delete %>
       <% end %>
        </div>
<% end %>
</div>

 
  <% unless current_user %>
  </div>
  <% end %>
<% end %>
