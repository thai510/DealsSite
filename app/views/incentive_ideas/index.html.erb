<%= content_for :rightlayout do %>
<h1>Listing incentive_ideas</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @incentive_ideas.each do |incentive_idea| %>
  <tr>
    <td><%= incentive_idea.title %></td>
    <td><%= incentive_idea.description %></td>
    <td><%= link_to 'Show', incentive_idea %></td>
    <td><%= link_to 'Edit', edit_incentive_idea_path(incentive_idea) %></td>
    <td><%= link_to 'Destroy', incentive_idea, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Incentive idea', new_incentive_idea_path %>
<% end %>
