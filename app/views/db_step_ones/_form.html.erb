<%= form_for (@db_step_one) , :html => {:multipart => true} do |f| %>
  

<div class='formHeader'>The Basics</div>
<br />
<div id="dealBuilderContainer">

    <div class="dealBuilderField"><%= f.text_field :offer_title, :placeholder => "Offer Title" %></div>

    <div class="dealBuilderField"><%= f.text_area :offer_description, :placeholder => "Offer Description" %></div>

<!--     <div id='dbOnePhotoInfoButton' style='display:inline;'> more</div> -->
    <!--<td><div style='display:inline;margin-left:20px;' #rubycode check_box(:db_step_one,:coupon,{},'yes','no') # Is this a coupon?</div></td> -->

    <div class="dealBuilderField"><%= f.text_field :offer_price,:placeholder => "Offer Price" %></div>

    <div class="dealBuilderField"><%= f.text_field :offer_value, :placeholder => "Offer Value" %></div>
    <div class="dealBuilderFileField"><%= f.file_field :offer_photo, :placeholder => "Offer Photo"%></div>
    <div class='dealBuilderFileMoreDivContainer' id='stepOneFileMoreDiv'><div class='dealBuilderFileMoreDivText'>?</div></div>

  <%= f.hidden_field :coupon, :value => 'no' %>
    <% if @deal_builder_id %>
       <%= f.hidden_field :deal_builder_id , :value => @deal_builder_id %>
    <% end %>
  <div class="dealBuilderSubmit" >
    <%= f.submit 'Forward'%>
  </div>
<% if @db_step_one.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@db_step_one.errors.count, "error") %> prohibited this db_step_one from being saved:</h2>
     <ul>
      <% @db_step_one.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
</div>

<div class="rightSideLayout" style='display:none'>
  <table class="stepOneTips">
    <tr id="offer_title" style='display:none'> 
      <td><%=FormTip.find_by_title("offer title").description %></td>
    </tr>
    <tr id="offer_photo" style='display:none'> 
      <td><%=FormTip.find_by_title("offer photo").description %></td>
    </tr>
    <tr id="offer_value" style='display:none'> 
      <td><%=FormTip.find_by_title("offer value").description.gsub("\n",'<br>').html_safe() %></td>
    </tr>
    <tr id="offer_price" style='display:none'> 
      <td><%=FormTip.find_by_title("offer price").description %></td>
    </tr>
    <tr id="offer_description" style='display:none'> 
      <td><%=FormTip.find_by_title("offer description").description.gsub("\n",'<br>').html_safe() %></td>
    </tr>
</table>
</div>
<div class="rightSideLayout" id='additionalRSL' style='display:none'>
   <table class='stepOneTips'>
    <tr id="additional_offer_description" style='display:none'> 
      <td><%=FormTip.find_by_title("additional offer description").description.gsub("\n",'<br>').html_safe() %></td>
    </tr>
   </table>
</div>
<div class="progressBar">
  <div class="currentProgress">
    <%= image_tag("/images/theme/blueBorderonlyCircle.png") %>
  </div>
  <div class="forwardProgress">
    <%= image_tag("/images/theme/greenBorderonlyCircle.png") %>
    <%= image_tag("/images/theme/greenBorderonlyCircle.png") %>
    <%= image_tag("/images/theme/greenBorderonlyCircle.png") %>
  </div>
</div>
<% end %>
