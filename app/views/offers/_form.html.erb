<%= form_for(@offer) do |f| %>
  <% if @offer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@offer.errors.count, "error") %> prohibited this offer from being saved:</h2>

      <ul>
      <% @offer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h2> Offer Details </h2>
  <div class="field">
    <%= f.label :business %>
    <%= f.collection_select(:business_id, Business.all,:id,:name) %>
  </div>
  <div class="field">
    <%= f.label :headline %>
    <%= f.text_field :headline %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :photo %><br />
    <%= f.file_field :photo %>
  </div>
  <div class="field">
    <%= f.label :fine_print %>
    <%= f.text_area :fine_print %>
  </div>
  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="field">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="field">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="field">
    <%= f.label :date_string %>
    <%= f.text_field :date_string, :placeholder => "ex. Wednesday, May 20th, 4:30PM - 9:30PM" %>
  </div>
  <hr>
  <div>
    <%= f.label "Start Offer Immediately" %>
    <%= check_box_tag :start_offer_now, 'yes',false %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
