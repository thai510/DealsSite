
  <h2 style='font-size:38px;display:inline;padding-bottom:5px;'><%= @offer.headline %></h2>
 <h3 style='display:inline;float:right;'><a data-toggle="modal" href="#myModal">How it works</a></h3>
    <br />
    <div class="modal hide" id="myModal">
      <div class="modal-body-changed">
        <%= image_tag "Presentation.png" %> 
      </div>
      <div class="modal-footer">
        <a class="btn" data-dismiss="modal">Close</a>
      </div>
    </div>
  <div class='row-fluid'>
    <div class='span4'>
     <div>
      <%=  image_tag @offer.photo.url(:medium)%>
     </div>
     <div id="fb-root"></div>
     <script>(function(d, s, id) {
       var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/all.js#xfbml=1";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));</script> 
      <br />
      <div class="fb-like"   data-href="http://www.offerglass.com/offers/<%=@offer.id%>/live" data-send="true"   data-width="70" data-show-faces="false"></div>
      <a href="https://twitter.com/share" class="twitter-share-button"   data-url="http://www.offerglass.com/offers/<%=@offer.id%>/live" data-text="Check out this awesome local offer!" data-via="OfferGlass">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
       <div> 
        <%= mail_to "", image_tag('glyphicons/glyphicons_010_envelope.png') + " Email" ,:body => "Awesome community offer at http://www.offerglass.com/offers/#{@offer.id}/live", 
           :subject => "Come join me at #{Business.find(@offer.business_id).name}", :class => "btn btn-small" %> 
           </div>
       <br />
       <h3><%= link_to 'Back To Offers', root_path %></h3>
    </div>
    <div class='span4 offset4'>
        <% @business = Business.find(@offer.business_id) %>
      <div>
        <h3 style='font-size:23px;'><%= @offer.description %></h3>
      </div>
      
      <br />
      <div>
         <b><%= @offer.date_string %></b>
      </div>
      <div>
         <%= @offer.address %>
      </div>
      <div>
         <%= @offer.city %>, <%= @offer.state %>, <%= @offer.zip %>
      </div>
      <br />
        <%= @business.description %> 
        <% if @business.website %>
          For more information visit <a href="http://<%=@business.website%>">their website.</a>
        <% end %>
      <br />
      <br />
      <div>
         <%= @offer.fine_print %> 
      </div>
      
    </div>
  <div class='span4'>
   <%= render '/vouchers/form', :object => @offer%> 
  </div>
</div>



