<%= form_for(@db_step_two) do |f| %>
  <% if @db_step_two.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@db_step_two.errors.count, "error") %> prohibited this db_step_two from being saved:</h2>

      <ul>
      <% @db_step_two.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<h1> Step 2: When and Where </h1>
<div class="leftSideLayout">

<table>
  <tr>
    <td><%= f.label :offer_launch_date %></td>
    <td><%= f.text_field :offer_launch_date, :size => '12px' %></td>
    <td></td>
  </tr>
  <tr><td><%= f.label 'Locations to include for deals' %></td><td></td></tr>
         <% User.find(current_user.id).locations.each do |loc| %>
         <tr><td><%= check_box_tag  'db_step_two[location_ids][]',loc.id,@db_step_two.locations.include?(loc) %>
         <%= loc.name %></td></tr>
         <% end %>
</table>

  <div class="actions">
    <%= f.hidden_field :deal_builder_id, :value => @deal_builder.id%>
    <%= f.submit 'Save and Continue' %>
  </div>
</div>
<div class="rightSideLayout">
  <table class="stepTwoTips">
    <tr id="offer_launch_date">
      <td><%=FormTip.find_by_title("offer launch date").description%></td>
    </tr>
    <tr id="locations">
      <td><%=FormTip.find_by_title("locations for deal").description%></td>
    </tr>
  </table>
</div>
<% end %>
