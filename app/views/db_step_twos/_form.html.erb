<%= nested_form_for @db_step_two do |f| %> 
  <% if @db_step_two.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @db_step_two.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="leftSideLayout">
<table id="dealBuilder">
   <tr><td class='dealBuilderField'>Offer Redeemable At:</td></tr>
        <%= f.fields_for :locations %>
    <tr><td class='locationField'><b><%= f.link_to_add "Add Location", :locations %></b></td></tr>
</table>
  <div class="actions">
    <% unless @deal_builder_id %>
      <%= f.hidden_field :deal_builder_id, :value => params[:db_id]%>
    <% else %>
      <%= f.hidden_field :deal_builder_id, :value => @deal_builder_id%>
    <% end %>
    <%= f.submit 'Save and Continue' %>
  </div>
</div>
<div class="rightSideLayout">
  <table class="stepTwoTips">
    <tr id="locations">
      <td><%=FormTip.find_by_title("locations for deal").description%></td>
    </tr>
  </table>
</div>
<div class="progressBar">
  <div class="previousProgress">
    <%= image_tag("/images/theme/bluefilledinCircle.png") %>
  </div>
  <div class="currentProgress">
    <%= image_tag("/images/theme/blueBorderonlyCircle.png") %>
  </div>
  <div class="forwardProgress">
    <%= image_tag("/images/theme/greenBorderonlyCircle.png") %>
    <%= image_tag("/images/theme/greenBorderonlyCircle.png") %>
  </div>

</div>
<% end %>
