<%=form_for @db_step_two do |f| %> 

<div class="leftSideLayout">
<table id="dealBuilder">
   <th style="color:#8cc63f;text-align:left;">Offer Redeemable At:</th>
   <th></th>
        <%= f.fields_for :locations do |locations_form|%>
          <tr><td class='locationField' style='padding-top:40px;'><%= locations_form.text_field :address,:placeholder => 'Address',:size => '20' %></td>
          <td class='locationField' style='padding-top:40px;'><%= locations_form.text_field :city,:size=>'20',:placeholder => 'City' %></td></tr>
          <tr><td class='locationField' style='padding-bottom:40px;'><%= locations_form.select :state,Location::STATES, {:prompt => 'State'} %></td>
          <td class='locationField' style='padding-bottom:40px;'><%= locations_form.text_field :zip,:size => '6',:maxlength => '5' ,:placeholder => 'Zipcode'%><td></td></tr>
        <% end %>
    <tr>
       <td>
       <div style="display:inline;float:left;">
       <%= check_box(:db_step_two,:include_all,{},'yes','no') %> Include All Business Locations?</div></td></tr>
</table>
    <% unless @deal_builder_id %>
      <%= f.hidden_field :deal_builder_id, :value => params[:db_id]%>
      <div class="blueGreenLink" style="display:inline;float:left;">
      <%= link_to 'Back', edit_db_step_one_path(DbStepOne.find_by_deal_builder_id(params[:db_id]),:db_id => params[:db_id]) %>
      </div>
    <% else %>
      <%= f.hidden_field :deal_builder_id, :value => @deal_builder_id%>
      <div class="blueGreenLink" style="display:inline;float:left;">
      <%= link_to 'Back', edit_db_step_one_path(DbStepOne.find_by_deal_builder_id(@deal_builder_id),:db_id => @deal_builder_id) %>
      </div>
    <% end %>
  <div class="actions" style="float:right;">
    <%= f.submit 'Forward' %>
  </div>
</div>
<div class="rightSideLayout">
  <table class="stepTwoTips">
    <tr id="locations">
      <td><%=FormTip.find_by_title("locations for deal").description%></td>
    </tr>
  </table>
</div>
<div class="progressBar">
  <div class="previousProgress">
    <%= image_tag("/images/theme/bluefilledinCircle.png") %>
  </div>
  <div class="currentProgress">
    <%= image_tag("/images/theme/blueBorderonlyCircle.png") %>
  </div>
  <div class="forwardProgress">
    <%= image_tag("/images/theme/greenBorderonlyCircle.png") %>
    <%= image_tag("/images/theme/greenBorderonlyCircle.png") %>
  </div>

</div>
<% end %>
