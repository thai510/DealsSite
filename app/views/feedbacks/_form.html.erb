  <div class="field">
    <%= f.label :name, 'Name' %><br />
    <%= f.text_field :name %>
  </div>
  <br />
  <div class="field">
    <%= f.label :content, 'Feedback' %><br />
    <%= f.text_area :content,
                    :rows => 10,
                    :cols => 80,
                    :autocomplete => :off %>
  </div>
  <br />
  <div class="actions">
    <%= f.submit 'Send' %>
  </div>
<% end %>
