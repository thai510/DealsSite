<% unless session[:admin] %>
  <%= form_tag do %>
     <%= text_field_tag :username, params[:username], :placeholder => "Username" %>
     <%= password_field_tag :password, params[:password], :placeholder => "Password"%>
     <%= submit_tag 'Login'%>
  <% end %>
<% else %>
  Welcome Admin <%= Admin.find_by_username(session[:admin]).username %> 
  <%= link_to "logout", logout_admin_path, :method => 'delete' %>

  <br />
  <h1> Serving <%= Business.all.count %> Businesses </h1>
  <% Business.all.each do |b| %>
     <%= image_tag b.logo.url(:thumb) %>
     <%= link_to b.name, business_path(b) %><br />
  <% end %>
  <%= link_to "Add a New Business", new_business_path %>
<% end %>



